<%- include('partials/header') %>

<h2><%= action %> Post</h2>
<form action="<%= formAction %>" method="POST" enctype="multipart/form-data">

  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= post ? post.title : '' %>" required>
  </div>
  <div>
    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= post ? post.content : '' %></textarea>
  </div>
  <div>
    <label for="image">Image:</label>
    <input type="file" id="image" name="image" accept="image/*">
  </div>
  <% if (post && post.image) { %>
  <div>
    <img src="/uploads/<%= post.image %>" alt="Post image" style="max-width: 200px;">
    <label>
      <input type="checkbox" name="deleteImage"> Delete existing image
    </label>
  </div>
  <% } %>
  <button type="submit"><%= action %></button>
</form>
<a href="/posts" class="btn">Back</a>

<%- include('partials/footer') %>
